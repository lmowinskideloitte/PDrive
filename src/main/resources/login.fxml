<VBox xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.put.poznan.pdrive.GUI.Login">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #87878787;">
         <center>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <Label layoutX="14.0" layoutY="63.0" text="Username">
                     <font>
                        <Font name="Calibri Bold" size="12.0" />
                     </font>
                  </Label>
                  <TextField fx:id="usernameField" layoutX="71.0" layoutY="59.0" prefHeight="26.0" prefWidth="120.0" promptText="username" />
                  <PasswordField fx:id="passwordField" layoutX="70.0" layoutY="95.0" prefHeight="26.0" prefWidth="121.0" promptText="password" />
                  <Label layoutX="16.0" layoutY="101.0" text="Password">
                     <font>
                        <Font name="Calibri Bold" size="12.0" />
                     </font>
                  </Label>
                  <Button fx:id="loginButton" layoutX="64.0" layoutY="140.0" mnemonicParsing="false" onAction="#userLogin" prefHeight="26.0" prefWidth="71.0" style="-fx-background-color: #ffc900;" text="Log in" />
                  <Label fx:id="loginLabel" layoutX="86.0" layoutY="42.0" textFill="RED" />
               </children>
            </AnchorPane>
         </center>
      </BorderPane>
   </children>
</VBox>
