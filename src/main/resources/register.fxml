<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.put.poznan.pdrive.GUI.Register">
    <children>
        <BorderPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #87878787;">
            <center>
                <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label layoutX="14.0" layoutY="63.0" text="Username">
                            <font>
                                <Font name="Calibri Bold" size="12.0" />
                            </font>
                        </Label>
                        <TextField fx:id="usernameField" layoutX="71.0" layoutY="59.0" prefHeight="26.0" prefWidth="120.0" promptText="username" />
                        <PasswordField fx:id="passwordField" layoutX="70.0" layoutY="95.0" prefHeight="26.0" prefWidth="121.0" promptText="password" />
                        <Label layoutX="16.0" layoutY="101.0" text="Password">
                            <font>
                                <Font name="Calibri Bold" size="12.0" />
                            </font>
                        </Label>
                        <Button fx:id="registerButton" layoutX="114.0" layoutY="140.0" mnemonicParsing="false" onAction="#userRegister" prefHeight="26.0" prefWidth="71.0" style="-fx-background-color: #ffc900;" text="Register" />
                        <Label fx:id="registerLabel" layoutX="86.0" layoutY="42.0" textFill="RED" />
                  <Button fx:id="loginButton" layoutX="14.0" layoutY="140.0" mnemonicParsing="false" onAction="#switchToLogin" prefHeight="26.0" prefWidth="71.0" style="-fx-background-color: #ffc900;" text="Login" />
                    </children>
                </AnchorPane>
            </center>
        </BorderPane>
    </children>
</VBox>
